main.solid.flex.column.middle.center
  img.icon.biggest(src="/images/project-submitted.svg")

  label(ng-if="project.activeWorkStep.name == 'Design Concepts'") Design work has begun

  label(ng-if="project.activeWorkStep.name == 'Final Designs'") Awaiting {{project.activeWorkStep.name}}

  label(ng-if="project.activeWorkStep.name == 'Final Fixes' || project.activeWorkStep.name == 'Code'") Awaiting final deliverables

footer.flex-grow.flex.column.end
  p(ng-if="project.activeWorkStep.name == 'Design Concepts'") You'll receive concepts in {{project.activeWorkStep.submissionDueBy | timeLapse:project.activeWorkStep.submissionDueBy:true }}

  p(ng-if="project.activeWorkStep.name == 'Final Designs'") You'll receive submissions in {{project.activeWorkStep.submissionDueBy | timeLapse:project.activeWorkStep.submissionDueBy:true }}

  p(ng-if="project.activeWorkStep.name == 'Final Fixes'") Receive final submissions in several days

  p(ng-if="project.activeWorkStep.name == 'Code'") Receive final deliverables in several days