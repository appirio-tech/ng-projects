loader(ng-show="vm.loading")

ul.flex.wrap
  li(ng-repeat= "project in vm.projects track by $index" fitted-width=true)
    header
      a(ui-sref="timeline({ workId: project.id })")
        h5 {{ project.name || 'Unnamed Project' }}

      p.type {{ vm.typeMap[project.projectType] }} - {{ project.status }}

    hr(ng-if="project.status == 'Assigned' || project.status == 'Estimate'")

    main.incomplete.flex.column.middle.center(ng-if="project.status == 'Incomplete'")
      .icon.big.warning

      h6 Project submission incomplete

      a.button(ui-sref="submit-work({ id: project.id })") continue setup

    main.submitted.flex.column(ng-if="project.status == 'Submitted'")
      .flex.column.middle.center.flex-grow
        .icon.big.warning

        h6 Project submitted

      footer
        p You are waiting for project approval

        p This should take about 1 day

    main.approved(ng-if="project.status == 'Assigned'")
      h6 Meet your co-pilot

      avatar.icon.big(ng-src="{{project.copilot.avatar}}")

      p.name {{project.copilot.handle}}

      p.secondary Co-Pilot

    main.approved(ng-if="project.status == 'Estimate'")
      h6 Quote Generated

      avatar.icon.big(ng-src="{{project.copilot.avatar}}")

      p.name {{project.copilot.handle}}

      p.secondary Co-Pilot

      a.button.action(ui-sref="timeline({ workId: project.id })") view quote

    main.launched.flex.column(ng-if="project.status == 'Approved'")
      .flex.column.middle.center.flex-grow
        .icon.big.warning

        h6 Project Approved

      footer
        p Blah blah blah blah

        p Blah blah blah blah

    main.launched.flex.column(ng-if="project.status == 'Launched'")
      .flex.column.middle.center.flex-grow
        .icon.big.warning

        h6 Project launched

      footer
        p Design work is in progress

        p Get design submissions in several days.

    main.complete.flex.column.middle.center(ng-if="project.status == 'Complete'")
      .icon.big.warning

      h6 Project complete!

      button deploy my app

.no-projects(ng-if="vm.projects.length == 0")
  p You have not started any projects.


