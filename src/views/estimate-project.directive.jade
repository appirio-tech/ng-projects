loader(ng-show="vm.loading")

form(ng-submit="vm.submit()" ng-hide="vm.saved")
  .cost-estimate.flex.space-between.wrap
    .cost
      p Cost

      .fields.flex.middle
        input(ng-model="vm.payload.price.min" type="number" placeholder="$" required="true")

        p to

        input(ng-model="vm.payload.price.max" type="number" placeholder="$" required="true")

    .duration
      p Project Duration

      .fields.flex.middle
        input(ng-model="vm.payload.duration.min" type="number" placeholder="$" required="true")

        p to

        input(ng-model="vm.payload.duration.max" type="number" placeholder="$" required="true")

        p weeks

  button.action.wider save estimates

h3(ng-show="vm.saved") Esimate saved